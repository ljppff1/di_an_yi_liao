<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/page_title"
        android:layout_width="fill_parent" >

        <Button
            android:id="@+id/back_btn"
            style="@style/back_button_style"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:text="@string/back_btn" />

        <TextView
            style="@style/page_title_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/diabetes_manager" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/data_list"
                style="@style/button_style"
                android:layout_width="@dimen/page_title_height"
                android:layout_height="fill_parent"
                android:src="@drawable/sugar_entry_list" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/page_sub_title_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/total_model"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/total"
                style="@style/top_select_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/effect_count" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_list_model"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/total_list"
                style="@style/top_select_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/effect_count" />
        </LinearLayout>

        <View
            android:layout_width="0.8dip"
            android:layout_height="fill_parent"
            android:background="@color/line_target" />

        <LinearLayout
            android:id="@+id/model"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/time_radio"
                style="@style/top_select_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_week" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dip"
        android:background="@color/main_divider_line" />

    <FrameLayout
        android:id="@+id/sugar_total_contain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>