<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/page_title"
        android:layout_width="fill_parent" >

        <Button
            android:id="@+id/back_btn"
            style="@style/back_button_style"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:text="@string/back_btn" />

        <TextView
            style="@style/page_title_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/target_set" />

        <Button
            android:id="@+id/save_btn"
            style="@style/ok_button_style"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:text="@string/submit_btn" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dip"
            android:layout_marginTop="20dip"
            android:background="@color/line_target" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/in_press"
                android:textColor="@color/effect_label_color"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                android:layout_width="@dimen/target_input_width"
                android:layout_height="@dimen/target_width"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/in_target"
                    style="@style/target_edit"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:hint="输入目标值"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:text="@string/mmhg"
                    android:textColor="@color/curren_day" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dip"
            android:background="@color/line_target" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dip"
            android:layout_marginTop="20dip"
            android:background="@color/line_target" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/out_press"
                android:textColor="@color/effect_label_color"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                android:layout_width="@dimen/target_input_width"
                android:layout_height="@dimen/target_width"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/out_target"
                    style="@style/target_edit"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:hint="输入目标值"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:padding="8dip"
                    android:text="@string/mmhg"
                    android:textColor="@color/curren_day" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dip"
            android:background="@color/line_target" />
    </LinearLayout>

</LinearLayout>