<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/content_fragment"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/tab_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/up_check"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/data_view"
            style="@style/bottom_radio_item"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/icon_date_view"
            android:text="@string/data_view" />

        <RadioButton
            android:id="@+id/sugest_plan"
            style="@style/bottom_radio_item"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_suport_plan"
            android:text="@string/sugest_plan" />

        <RadioButton
            android:id="@+id/data_total"
            style="@style/bottom_radio_item"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_sugar_total"
            android:text="@string/data_total" />
    </RadioGroup>

</LinearLayout>