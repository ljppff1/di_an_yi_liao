<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/page_title"
        android:layout_width="fill_parent" >

        <Button
            android:id="@+id/back_btn"
            style="@style/back_button_style"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:text="@string/back_btn" />

        <TextView
            style="@style/page_title_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/indicator_manager" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/data_list"
                style="@style/button_style"
                android:layout_width="@dimen/page_title_height"
                android:layout_height="fill_parent"
                android:src="@drawable/sugar_entry_list" />

            <ImageButton
                android:id="@+id/new_indicate"
                style="@style/button_style"
                android:layout_width="@dimen/page_title_height"
                android:layout_height="fill_parent"
                android:src="@drawable/icon_sugar_add" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/page_title_height"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/pre_week"
                android:layout_width="@dimen/dimen_date_height"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/current_week"
                style="@style/effect_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/cur_week" />

            <ImageButton
                android:id="@+id/next_week"
                android:layout_width="@dimen/dimen_date_height"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:clickable="false"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="0.8dip"
            android:layout_height="fill_parent"
            android:background="@color/line_target" />

        <Button
            android:id="@+id/check_dinner"
            style="@style/check_button_style"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/eat_pre" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dip"
        android:background="@color/line_target" />

</LinearLayout>