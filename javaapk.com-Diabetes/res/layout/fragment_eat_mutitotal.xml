<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="@dimen/circle_size"
            android:layout_height="@dimen/circle_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip" >

            <com.dian.diabetes.widget.MutiProgress
                android:id="@+id/eat_progress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/to_persent"
                    android:textColor="@color/contents_text"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/result_persent"
                    style="@style/persent_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_number"
                    android:textColor="@color/calore_net" />

                <TextView
                    android:id="@+id/calore_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/calore_avg"
                    android:textColor="@color/contents_text"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/main_divider_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dip"
                android:text="@string/avd_day"
                android:textSize="@dimen/text_size_13" />

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dip"
                android:text="@string/calorie_net" />

            <TextView
                android:id="@+id/total_net_day"
                style="@style/eatimp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_number"
                android:textColor="@color/calore_net" />
        </LinearLayout>

        <TextView
            style="@style/eatimp_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/equels" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dip"
                android:text="@string/avd_day"
                android:textSize="@dimen/text_size_13" />

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dip"
                android:drawableRight="@drawable/eat_icon"
                android:paddingTop="0dip"
                android:text="@string/eat_add_calorie"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/total_eat_day"
                style="@style/eatimp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_number"
                android:textColor="@color/eat_color" />
        </LinearLayout>

        <TextView
            style="@style/eatimp_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/sub" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dip"
                android:text="@string/avd_day"
                android:textSize="@dimen/text_size_13" />

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dip"
                android:drawableRight="@drawable/sport_icon"
                android:paddingTop="0dip"
                android:text="@string/sport_dismiss"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/total_sport_day"
                style="@style/eatimp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_number"
                android:textColor="@color/sport_color" />
        </LinearLayout>

        <TextView
            style="@style/eatimp_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/sub" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dip"
                android:textSize="@dimen/text_size_13" />

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dip"
                android:text="@string/system_support"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/total_suggest"
                style="@style/eatimp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_number" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dip"
        android:background="@color/main_divider_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_calorie_net" />

            <TextView
                android:id="@+id/total_net"
                style="@style/eatimp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_number"
                android:textColor="@color/calore_net" />
        </LinearLayout>

        <TextView
            style="@style/eatimp_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/equels" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dip"
                android:drawableRight="@drawable/eat_icon"
                android:text="@string/total_eat_add_calorie"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/total_eat"
                style="@style/eatimp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_number"
                android:textColor="@color/eat_color" />
        </LinearLayout>

        <TextView
            style="@style/eatimp_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/sub" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                style="@style/eatimp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dip"
                android:drawableRight="@drawable/sport_icon"
                android:text="@string/tota_sport_dismiss"
                android:textSize="@dimen/text_size_13" />

            <TextView
                android:id="@+id/total_sport"
                style="@style/eatimp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_number"
                android:textColor="@color/sport_color" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/main_divider_line" />

</LinearLayout>